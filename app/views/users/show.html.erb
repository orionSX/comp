<h1>User Details</h1>

  <div class="details">
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>Email:</strong> <%= @user.email%></p>
  </div>

  <h2 style="text-align: center;">Reservations</h2>

  <table class="reservations-table">
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Actions</th>
    </tr>
    <% @reservations.each_with_index do |reservation, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= reservation.computer.name%></td>
        <td><%= reservation.start_time.strftime('%H:%M %d.%m.%Y') %></td>
        <td><%= reservation.end_time.strftime('%H:%M %d.%m.%Y') %></td>
        <td><%= link_to "Show", reservation, style: "color: #007bff; text-decoration: none;" %></td>
      </tr>
    <% end %>
  </table>

  <div class="action-links">
<%= link_to 'Edit', edit_user_path(@user) %> 
<%= link_to 'Back', users_path %>
  </div>
  <br>
