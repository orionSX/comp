<div class="container">
  <h1 class="heading">Reservation Details</h1>

  <div class="details">
    <p>
      <span class="label">User:</span> <%= @reservation.user.email %>
      <span class="actions">
        | <%= link_to "View User", @reservation.user, class: "link-btn" %>
      </span>
    </p>

    <p>
      <span class="label">Computer:</span> <%= @reservation.computer.name %>
      <span class="actions">
        | <%= link_to "View Computer", @reservation.computer, class: "link-btn" %>
      </span>
    </p>

    <p>
      <span class="label">Start Time:</span> <%= @reservation.start_time.strftime('%H:%M %d.%m.%Y') %>
    </p>

    <p>
      <span class="label">End Time:</span> <%= @reservation.end_time.strftime('%H:%M %d.%m.%Y') %>
    </p>
  </div>

  <div class="buttons">
    <%= link_to 'Edit Reservation', edit_reservation_path(@reservation), class: "btn btn-primary" %>
    <%= link_to 'Back to Reservations', reservations_path, class: "btn btn-secondary" %>
  </div>
</div>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  .heading {
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
  }

  .details {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
  }

  .details p {
    margin: 10px 0;
    font-size: 1rem;
  }

  .label {
    font-weight: bold;
    color: #555;
  }

  .actions {
    font-size: 0.9rem;
    color: #007bff;
  }

  .actions .link-btn {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
  }

  .actions .link-btn:hover {
    text-decoration: underline;
  }

  .buttons {
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }

  .btn {
    text-decoration: none;
    font-size: 1rem;
    padding: 10px 20px;
    border-radius: 5px;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }
</style>
